@model NoteWork.Models.Note
@{
    ViewBag.Title = "Удаление заметки";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.NameNote)
        </dd>


        <dt>Заметка</dt>
        <dd>
            @Html.DisplayFor(model => model.ThisNote)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить?" />
            </div>
        </form>
    </div>
</div>